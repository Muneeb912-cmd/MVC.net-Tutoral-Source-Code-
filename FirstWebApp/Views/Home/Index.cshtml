
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,800" />
    <script src="~/Scripts/Functions.js"></script>
    <link href="@Url.Content("/Content/IndexPageCss.css")" rel="stylesheet"/>
</head>

<body>
    <h2 style="color: white; font-size: 50px">DukoWheels</h2>
    <div class="container" id="container">

        <div class="form-container sign-in-container">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <h1>Sign in</h1>

                <input type="email" id="email" name="email" />
                <input type="password" name="password" id="password" />
                <a href="@Url.Action("AccountRecovery")">Forgot your password?</a>
                <button type="submit">Sign In</button>

            }
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button type="submit" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>

                    <button onclick="goToSignUpPage()" class="ghost" id="signUp">SignUp </button>
                  
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <h2 style="color: white; font-size: 10px">Powered by Incredebols<br>All Rights Reserved to the Owner</h2>
</body>